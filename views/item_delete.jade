extends layout 

block content 
    h1 Delete: #{item.name}
    p= item.description
    p Price($) per unit: #{item.price}
    p Stock: #{item.stock}
    p Category: 
        a(href=item.category.url)= item.category.name 

    p Do you really want to delete this item?
    form(method="POST")
        input(type="hidden", name="item_id", value=item._id)
        button(type="submit") Delete